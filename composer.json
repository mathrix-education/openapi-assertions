{
  "name": "mathrix/openapi-assertions",
  "description": "Validate PSR-7 requests against OpenAPI specification. Heavily based on league/openapi-psr7-validator.",
  "version": "0.11.0",
  "type": "library",
  "keywords": [
    "openapi",
    "phpunit",
    "assertions",
    "lumen"
  ],
  "homepage": "https://github.com/mathrix-education/openapi-assertions",
  "license": "MIT",
  "authors": [
    {
      "name": "Mathieu Bour",
      "email": "mathieu@mathrix.fr",
      "homepage": "https://www.linkedin.com/in/mathieu-bour",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "mathieu@mathrix.fr",
    "issues": "https://github.com/mathrix-education/openapi-processor/issues",
    "wiki": "https://github.com/mathrix-education/openapi-processor/wiki",
    "source": "https://github.com/mathrix-education/openapi-processor"
  },
  "require": {
    "php": ">=7.1",
    "phpunit/phpunit": "^7.0 || ^8.0",
    "league/openapi-psr7-validator": "^0.3.2"
  },
  "require-dev": {
    "laravel/lumen-framework": " 5.7.* || 5.8.* || ^6.0",
    "mathrix/coding-standard": "0.9.1",
    "symfony/psr-http-message-bridge": "^1.2",
    "nyholm/psr7": "^1.1"
  },
  "suggest": {
    "symfony/psr-http-message-bridge": "Required to convert Symfony Response to PSR7 Response (Lumen)",
    "nyholm/psr7": "Required to convert Symfony Response to PSR7 Response (Lumen)"
  },
  "autoload": {
    "psr-4": {
      "Mathrix\\OpenAPI\\Assertions\\": "src"
    }
  },
  "repositories": {
    "mathrix/coding-standards": {
      "type": "vcs",
      "url": "git@github.com:mathrix-education/coding-standard.git"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "lint": "phpcs --report=source",
    "lint:details": "phpcs",
    "lint:fix": "phpcbf"
  }
}
